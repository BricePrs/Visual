#version 430 core

layout(binding = 2, rgba32f) uniform image2D framebuffer;

layout (local_size_x = 8, local_size_y = 8, local_size_z = 1) in;
void main() {
    ivec2 pix = ivec2(gl_GlobalInvocationID.x, gl_GlobalInvocationID.y);
    vec4 color = imageLoad(framebuffer, pix);
    imageStore(framebuffer, pix, color + vec4(0., 0., 1., 0.));
}